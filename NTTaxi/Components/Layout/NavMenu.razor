<div class="top-row navbar navbar-dark ps-3">
    <div class="flex justify-center pt-2">
        <a href="#">
            <img src="./imgs/logo.png" alt="Logo" class="h-10 w-auto" />
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" @onclick="ToggleSidebar" />
<!-- Sidebar -->
<div class="@SidebarCss">

    <nav class="flex flex-col space-y-2 p-3">
        <NavLink @onclick="ToggleSidebar" class="flex items-center gap-2 rounded-lg px-3 py-2 hover:bg-gray-700"
                 href="" Match="NavLinkMatch.All">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
            <span>Dashboard</span>
        </NavLink>
        <div class="text-lg text-green-200">ĐƠN HÀNG</div>

        <NavLink @onclick="ToggleSidebar" class="flex items-center gap-2 rounded-lg px-3 py-2 hover:bg-gray-700"
                 href="ali">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 0 1 0 3.75H5.625a1.875 1.875 0 0 1 0-3.75Z" />
            </svg>
            <span>Ali</span>
        </NavLink>

        <NavLink @onclick="ToggleSidebar" class="flex items-center gap-2 rounded-lg px-3 py-2 hover:bg-gray-700"
                 href="gsm">
            <img src="./imgs/gsm.png" alt="GSM" class="h-4" />
            <span>Xanh SM</span>
        </NavLink>

        
    </nav>
</div>
@code {
    private bool isSidebarVisible = true;
    private string SidebarCss => !isSidebarVisible
       ? "fixed top-0 left-0 h-full w-[250px] bg-gray-800 text-white transition-transform duration-300 translate-x-0 sm:translate-x-0 sm:static"
       : "fixed top-0 left-0 h-full w-[250px] bg-gray-800 text-white transition-transform duration-300 -translate-x-full sm:translate-x-0 sm:static";

    private void ToggleSidebar()
    {
        isSidebarVisible = !isSidebarVisible;
    }
}